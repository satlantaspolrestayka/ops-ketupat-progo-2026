                    <div class="tab-label">MOBIL</div>
                </div>
                
                <div class="capacity-tab tab-motor">
                    <div class="tab-icon">üèçÔ∏è</div>
                    <div class="tab-number" id="totalMotor">1,682</div>
                    <div class="tab-label">MOTOR</div>
                </div>
            </div>
        </div>
        
        <!-- ACTIONS SECTION -->
        <div class="actions-section">
            <div class="action-wrapper">
                <button class="btn btn-primary" onclick="cariParkirTerdekat()" id="btnCari">
                    <span>üìç</span> CARI PARKIR TERDEKAT
                </button>
                <div class="last-updated" id="lastUpdated">
                    Memuat data...
                </div>
            </div>
        </div>
        
        <!-- MAIN CONTENT -->
        <div class="main-content">
            <div class="section-title">
                DAFTAR LOKASI PARKIR
            </div>
            
            <div class="lokasi-list" id="lokasiList">
                <!-- Data akan dimuat di sini -->
            </div>
        </div>
        
        <!-- FOOTER -->
        <div class="footer">
            <div class="footer-logo">Satlantas Polresta Yogyakarta</div>
            <p>Polri Untuk Masyarakat</p>
            <p class="footer-copyright">¬© 2026 - Operasi Ketupat Progo</p>
            <p class="footer-copyright">Scan QR Code untuk informasi parkir</p>
        </div>
    </div>

    <script>
        // Data parkir awal
        let dataParkir = [];
        let userPosition = null;
        const distancesCache = new Map();
        let isCalculating = false;

        // Konfigurasi GitHub
        const GITHUB_CONFIG = {
            REPO_OWNER: 'your-username', // Ganti dengan username GitHub Anda
            REPO_NAME: 'ops-ketupat-progo-2026',
            DATA_FILE: 'data/parkir-data.json'
        };

        // Data operasional khusus Kridosono untuk 2026
        const kridosonoOperasional2026 = {
            periode1: {
                label: "20 - 22 April 2026",
                waktu: "18.00 WIB",
                motor: "150 motor",
                mobil: "30 mobil"
            },
            periode2: {
                label: "23 - 26 April 2026",
                waktu: "18.00 WIB",
                motor: "250 motor",
                mobil: "250 mobil"
            }
        };

        // Fungsi untuk mendapatkan kapasitas Kridosono berdasarkan tanggal
        function getKridosonoKapasitasHariIni() {
            const today = new Date();
            
            // Tanggal referensi Operasi Ketupat 2026 (contoh)
            const startPeriode1 = new Date(2026, 3, 20); // 20 April 2026
            const endPeriode1 = new Date(2026, 3, 22); // 22 April 2026
            const startPeriode2 = new Date(2026, 3, 23); // 23 April 2026
            const endPeriode2 = new Date(2026, 3, 26); // 26 April 2026
            
            if (today >= startPeriode1 && today <= endPeriode1) {
                return {
                    mobil: 30,
                    motor: 150,
                    periode: "Periode 1 (20-22 April 2026)"
                };
            } else if (today >= startPeriode2 && today <= endPeriode2) {
                return {
                    mobil: 250,
                    motor: 250,
                    periode: "Periode 2 (23-26 April 2026)"
                };
            } else {
                return {
                    mobil: 0,
                    motor: 0,
                    periode: "Tidak ada operasional khusus"
                };
            }
        }

        // ====== FUNGSI UTAMA ======
        function hitungJarak(lat1, lon1, lat2, lon2) {
            const R = 6371;
            const dLat = (lat2 - lat1) * Math.PI / 180;
            const dLon = (lon2 - lon1) * Math.PI / 180;
            const a = 
                Math.sin(dLat/2) * Math.sin(dLat/2) +
                Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) * 
                Math.sin(dLon/2) * Math.sin(dLon/2);
            const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
            return R * c;
        }

        function formatJarak(km) {
            if (km < 1) {
                return `${Math.round(km * 1000)} meter`;
            } else {
                return `${km.toFixed(1)} km`;
            }
        }

        function getLocation() {
            return new Promise((resolve, reject) => {
                if (userPosition) {
                    resolve(userPosition);
                    return;
                }
                
                if (isCalculating) {
                    reject(new Error('Sedang menghitung lokasi...'));
                    return;
                }
                
                if (!navigator.geolocation) {
                    reject(new Error('Browser tidak mendukung GPS'));
                    return;
                }
                
                showLoading('Mendeteksi lokasi Anda...');
                
                navigator.geolocation.getCurrentPosition(
                    (pos) => {
                        userPosition = {
                            lat: pos.coords.latitude,
                            lng: pos.coords.longitude
                        };
                        hideLoading();
                        resolve(userPosition);
                    },
                    (err) => {
                        hideLoading();
                        reject(err);
                    },
                    {
                        enableHighAccuracy: true,
                        timeout: 8000,
                        maximumAge: 0
                    }
                );
            });
        }

        async function hitungSemuaJarak() {
            if (!userPosition) return;
            
            showLoading('Menghitung jarak ke lokasi parkir...');
            
            distancesCache.clear();
            
            for (const lokasi of dataParkir) {
                try {
                    const [lokasiLat, lokasiLng] = lokasi.koordinat.split(',').map(Number);
                    const jarak = hitungJarak(
                        userPosition.lat,
                        userPosition.lng,
                        lokasiLat,
                        lokasiLng
                    );
                    distancesCache.set(lokasi.id, jarak);
                    
                    updateJarakDisplay(lokasi.id, jarak);
                    
                    await delay(50);
                } catch (error) {
                    console.error(`Error menghitung jarak untuk ${lokasi.nama}:`, error);
                    distancesCache.set(lokasi.id, Infinity);
                }
            }
            
            hideLoading();
        }

        function delay(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }

        function showLoading(message) {
            const overlay = document.getElementById('loadingOverlay');
            if (overlay) {
                const text = overlay.querySelector('.loading-text');
                if (text && message) {
                    text.textContent = message;
                }
                overlay.classList.add('active');
            }
        }

        function hideLoading() {
            const overlay = document.getElementById('loadingOverlay');
            if (overlay) {
                overlay.classList.remove('active');
            }
        }

        // Fungsi untuk load data dari GitHub
        async function loadDataFromGitHub() {
            try {
                showLoading('Memuat data terbaru...');
                
                const response = await fetch(
                    `https://raw.githubusercontent.com/${GITHUB_CONFIG.REPO_OWNER}/${GITHUB_CONFIG.REPO_NAME}/main/${GITHUB_CONFIG.DATA_FILE}?t=${Date.now()}`
                );
                
                if (!response.ok) {
                    throw new Error(`Gagal memuat data: ${response.status}`);
                }
                
                const data = await response.json();
                
                // Update dataParkir dengan data dari GitHub
                dataParkir = data.locations || [];
                
                // Update statistics
                updateStatistics(data);
                
                // Render lokasi
                renderLokasi();
                
                // Update last updated time
                updateLastUpdated(data.metadata?.last_updated);
                
                // Cache data
                localStorage.setItem('parkir_data_cache', JSON.stringify(data));
                localStorage.setItem('parkir_data_timestamp', Date.now());
                
                hideLoading();
                return data;
                
            } catch (error) {
                console.error('Error loading data from GitHub:', error);
                
                // Fallback ke cache atau data statis
                const cached = localStorage.getItem('parkir_data_cache');
                if (cached) {
                    console.log('Menggunakan data cache');
                    const data = JSON.parse(cached);
                    dataParkir = data.locations || [];
                    updateStatistics(data);
                    renderLokasi();
                    updateLastUpdated(data.metadata?.last_updated || 'Cache');
                    hideLoading();
                    return data;
                }
                
                // Fallback ke data statis jika semua gagal
                loadStaticData();
                hideLoading();
                throw error;
            }
        }

        // Data statis fallback
        function loadStaticData() {
            dataParkir = [
                {id:1, nama:"SENOPATI", alamat:"JL P. SENOPATI", bus:62, mobil:200, motor:0, koordinat:"-7.8017074,110.3681792"},
                {id:2, nama:"NGABEAN", alamat:"JL W. HASYIM", bus:60, mobil:80, motor:100, koordinat:"-7.8014685,110.3562862"},
                {id:3, nama:"SRI WEDANI", alamat:"JL SRI WEDANI", bus:0, mobil:60, motor:250, koordinat:"-7.800385,110.368361"},
                {id:4, nama:"SPRAGA", alamat:"JL KHA DAHLAN", bus:0, mobil:130, motor:0, koordinat:"-7.8018505,110.3632816"},
                {id:5, nama:"RAMAI MALL", alamat:"JL BESKALAN", bus:0, mobil:20, motor:382, koordinat:"-7.7973211,110.3641841"},
                {id:6, nama:"GRAND ZURI", alamat:"JL MARGO UTOMO", bus:100, mobil:50, motor:0, koordinat:"-7.787088,110.366706"},
                {id:7, nama:"EX MENARA CAFE", alamat:"JL ABU BAKAR ALI", bus:20, mobil:50, motor:0, koordinat:"-7.7897929,110.3706896"},
                {id:8, nama:"MALIOBORO II", alamat:"JL PABRINGAN", bus:0, mobil:115, motor:250, koordinat:"-7.7992907,110.3663957"},
                {id:9, nama:"MALIOBORO III", alamat:"JL KETANDAN 7", bus:0, mobil:125, motor:0, koordinat:"-7.7978843,110.3673653"},
                {id:10, nama:"UTARA CAVINTON", alamat:"JL LETJEND SUPRAPTO", bus:40, mobil:150, motor:0, koordinat:"-7.8002542,110.3560535"},
                {id:11, nama:"GEMBIRA LOKA", alamat:"JL KEBUN RAYA", bus:82, mobil:100, motor:300, koordinat:"-7.8037595,110.3968204"},
                {id:12, nama:"KAWULA ALIT", alamat:"JL GANDEKAN", bus:0, mobil:100, motor:200, koordinat:"-7.7920043,110.3611007"},
                {id:13, nama:"PARKIRAN KOMANDO", alamat:"JL SUDIRMAN", bus:0, mobil:60, motor:200, koordinat:"-7.7832641,110.3683152"},
                {id:14, nama:"EKS TRIO", alamat:"JL MARGOUTOMO", bus:130, mobil:300, motor:0, koordinat:"-7.7883952,110.36693"},
                {id:15, nama:"STADION KRIDOSONO", alamat:"JL YOS SUDARSO", bus:0, mobil:0, motor:0, koordinat:"-7.7877683,110.3736898"}
            ];
            
            renderLokasi();
            updateLastUpdated('Data statis');
        }

        function updateStatistics(data) {
            if (!data.statistics) return;
            
            // Update counters di compact header
            const busEl = document.getElementById('totalBus');
            const mobilEl = document.getElementById('totalMobil');
            const motorEl = document.getElementById('totalMotor');
            const locationsEl = document.getElementById('totalLocations');
            
            if (busEl) busEl.textContent = data.statistics.total_available_bus || 0;
            if (mobilEl) mobilEl.textContent = data.statistics.total_available_mobil || 0;
            if (motorEl) motorEl.textContent = data.statistics.total_available_motor || 0;
            if (locationsEl) locationsEl.textContent = data.metadata?.total_locations || dataParkir.length;
        }

        function updateLastUpdated(timestamp) {
            const el = document.getElementById('lastUpdated');
            if (!el) return;
            
            if (timestamp === 'Cache' || timestamp === 'Data statis') {
                el.textContent = `Data: ${timestamp}`;
                el.style.color = '#f59e0b';
                return;
            }
            
            try {
                const date = new Date(timestamp);
                const now = new Date();
                const diffMinutes = Math.floor((now - date) / (1000 * 60));
                
                let timeText;
                if (diffMinutes < 1) {
                    timeText = 'Baru saja';
                } else if (diffMinutes < 60) {
                    timeText = `${diffMinutes} menit yang lalu`;
                } else if (diffMinutes < 1440) {
                    const hours = Math.floor(diffMinutes / 60);
                    timeText = `${hours} jam yang lalu`;
                } else {
                    const days = Math.floor(diffMinutes / 1440);
                    timeText = `${days} hari yang lalu`;
                }
                
                el.textContent = `Update terakhir: ${timeText}`;
                el.style.color = diffMinutes > 30 ? '#ef4444' : '#10b981';
                
            } catch (error) {
                el.textContent = `Update: ${timestamp}`;
            }
        }

        function updateJarakDisplay(lokasiId, jarak) {
            const jarakElements = document.querySelectorAll('.lokasi-jarak');
            jarakElements.forEach((element) => {
                const lokasiElement = element.closest('.lokasi-item');
                if (lokasiElement) {
                    const lokasiNama = lokasiElement.querySelector('.lokasi-nama');
                    if (lokasiNama) {
                        const namaText = lokasiNama.textContent.replace(' ‚ö†Ô∏è OPERASIONAL KHUSUS', '');
                        const lokasi = dataParkir.find(l => l.nama === namaText);
                        if (lokasi && lokasi.id === lokasiId) {
                            element.textContent = `üìè ${formatJarak(jarak)} dari lokasi Anda`;
                            element.classList.remove('lokasi-jarak-loading');
                        }
                    }
                }
            });
        }

        // ====== FUNGSI TOGGLE INFO OPERASIONAL ======
        function toggleInfoOperasional(button) {
            const content = button.nextElementSibling;
            const icon = button.querySelector('.toggle-icon');
            
            if (content.classList.contains('expanded')) {
                content.classList.remove('expanded');
                button.classList.remove('active');
                icon.textContent = 'üîΩ';
            } else {
                content.classList.add('expanded');
                button.classList.add('active');
                icon.textContent = 'üîº';
            }
        }

        async function cariParkirTerdekat() {
            const btn = document.getElementById('btnCari');
            if (!btn) return;
            
            btn.disabled = true;
            
            try {
                if (!userPosition) {
                    await getLocation();
                }
                
                if (distancesCache.size === 0) {
                    await hitungSemuaJarak();
                }
                
                // Sort berdasarkan jarak
                const sortedData = [...dataParkir].sort((a, b) => {
                    const jarakA = distancesCache.get(a.id) || Infinity;
                    const jarakB = distancesCache.get(b.id) || Infinity;
                    return jarakA - jarakB;
                });
                
                dataParkir = sortedData;
                renderLokasi();
                
                // Highlight yang terdekat
                highlightClosestParking();
                
                console.log('‚úÖ Parkir berhasil diurutkan berdasarkan jarak');
                
            } catch (error) {
                console.error('Error mengurutkan parkir:', error);
                
                if (error.code === 1) {
                    alert('Izinkan akses lokasi untuk mengurutkan parkir terdekat.');
                } else if (error.message === 'Timeout') {
                    alert('Waktu habis. Pastikan GPS aktif dan coba lagi.');
                } else {
                    alert('Tidak dapat mengakses lokasi Anda.');
                }
                
            } finally {
                btn.disabled = false;
            }
        }

        function highlightClosestParking() {
            // Hapus highlight sebelumnya
            document.querySelectorAll('.lokasi-item').forEach(item => {
                item.classList.remove('closest');
            });
            
            // Tambahkan highlight ke yang terdekat
            const firstItem = document.querySelector('.lokasi-item');
            if (firstItem) {
                firstItem.classList.add('closest');
                firstItem.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }
        }

        function renderLokasi() {
            const container = document.getElementById('lokasiList');
            if (!container) return;
            
            let html = '';
            
            dataParkir.forEach((lokasi, index) => {
                const jarak = distancesCache.get(lokasi.id);
                const jarakText = jarak ? 
                    `üìè ${formatJarak(jarak)} dari lokasi Anda` : 
                    'üìè Mendeteksi lokasi...';
                const jarakClass = jarak ? '' : 'lokasi-jarak-loading';
                
                const isKridosono = lokasi.nama === "STADION KRIDOSONO";
                const kridosonoClass = isKridosono ? ' kridosono' : '';
                const kridosonoBadge = isKridosono ? '<span class="kridosono-badge">‚ö†Ô∏è OPERASIONAL KHUSUS</span>' : '';
                
                // Ambil kapasitas dari data (support new and old format)
                let kapasitasBus = lokasi.bus?.available || lokasi.bus || 0;
                let kapasitasMobil = lokasi.mobil?.available || lokasi.mobil || 0;
                let kapasitasMotor = lokasi.motor?.available || lokasi.motor || 0;
                
                if (isKridosono) {
                    const kapasitasHariIni = getKridosonoKapasitasHariIni();
                    kapasitasMobil = kapasitasHariIni.mobil;
                    kapasitasMotor = kapasitasHariIni.motor;
                }
                
                // Tentukan status indicator
                const totalCapacity = (lokasi.bus?.total || lokasi.bus || 0) + 
                                    (lokasi.mobil?.total || lokasi.mobil || 0) + 
                                    (lokasi.motor?.total || lokasi.motor || 0);
                const availableCapacity = kapasitasBus + kapasitasMobil + kapasitasMotor;
                const percentage = totalCapacity > 0 ? availableCapacity / totalCapacity : 0;
                
                let statusClass = 'status-low';
                if (percentage === 0) {
                    statusClass = 'status-full';
                } else if (percentage < 0.3) {
                    statusClass = 'status-high';
                } else if (percentage < 0.6) {
                    statusClass = 'status-medium';
                }
                
                html += `
                    <div class="lokasi-item${kridosonoClass}">
                        <div class="status-indicator ${statusClass}"></div>
                        <div class="lokasi-header">
                            <div class="lokasi-nama">${lokasi.nama}${kridosonoBadge}</div>
                            <div class="lokasi-id">${index + 1}</div>
                        </div>
                        <div class="lokasi-alamat">${lokasi.alamat}</div>
                        <div class="lokasi-jarak ${jarakClass}">
                            ${jarakText}
                        </div>
                        <div class="kapasitas-container">
                `;
                
                // Tambahkan badge kapasitas
                if (kapasitasBus > 0) {
                    html += `
                        <span class="kap-badge badge-bus">
                            <span class="kap-icon">üöå</span>
                            <span class="kap-number">${kapasitasBus}</span>
                            <span class="kap-label">Bus</span>
                        </span>
                    `;
                }
                
                if (kapasitasMobil > 0) {
                    html += `
                        <span class="kap-badge badge-mobil">
                            <span class="kap-icon">üöó</span>
                            <span class="kap-number">${kapasitasMobil}</span>
                            <span class="kap-label">Mobil</span>
                        </span>
                    `;
                }
                
                if (kapasitasMotor > 0) {
                    html += `
                        <span class="kap-badge badge-motor">
                            <span class="kap-icon">üèçÔ∏è</span>
                            <span class="kap-number">${kapasitasMotor}</span>
                            <span class="kap-label">Motor</span>
                        </span>
                    `;
                }
                
                html += `</div>`;
                
                // Tambahkan tombol dan konten info operasional khusus untuk Kridosono
                if (isKridosono) {
                    html += `
                        <button class="info-operasional-toggle" onclick="toggleInfoOperasional(this)">
                            <span>üìÖ INFO OPERASIONAL KHUSUS</span>
                            <span class="toggle-icon">üîΩ</span>
                        </button>
                        
                        <div class="info-operasional-content">
                            <div class="operasional-simple">
                                <div class="periode-simple">
                                    <div class="periode-title">20-22 April 2026</div>
                                    <div class="periode-waktu">18.00 WIB</div>
                                    <div class="periode-kapasitas">
                                        <span class="simple-badge mobil">
                                            üöó ${kridosonoOperasional2026.periode1.mobil}
                                        </span>
                                        <span class="simple-badge motor">
                                            üèçÔ∏è ${kridosonoOperasional2026.periode1.motor}
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="periode-simple">
                                    <div class="periode-title">23-26 April 2026</div>
                                    <div class="periode-waktu">18.00 WIB</div>
                                    <div class="periode-kapasitas">
                                        <span class="simple-badge mobil">
                                            üöó ${kridosonoOperasional2026.periode2.mobil}
                                        </span>
                                        <span class="simple-badge motor">
                                            üèçÔ∏è ${kridosonoOperasional2026.periode2.motor}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                }
                
                html += `
                        <div class="lokasi-actions">
                            <button class="btn-action btn-map" onclick="bukaLokasiDiMaps('${lokasi.koordinat}', '${lokasi.nama}')">
                                <span>üó∫Ô∏è</span> Lihat di Maps
                            </button>
                            <button class="btn-action btn-route" onclick="ruteKeLokasi('${lokasi.koordinat}', '${lokasi.nama}')">
                                <span>üìç</span> Rute ke Sini
                            </button>
                        </div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }

        function bukaLokasiDiMaps(koordinat, nama) {
            const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent);
            
            if (isIOS) {
                window.location.href = `maps://?q=${koordinat}&z=16`;
                
                setTimeout(() => {
                    if (document.hasFocus()) {
                        window.open(`https://maps.google.com/?q=${koordinat}`, '_blank');
                    }
                }, 500);
            } else {
                window.open(`https://maps.google.com/?q=${koordinat}`, '_blank');
            }
        }

        function ruteKeLokasi(koordinat, nama) {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    (pos) => {
                        const userLat = pos.coords.latitude;
                        const userLng = pos.coords.longitude;
                        const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent);
                        
                        if (isIOS) {
                            window.location.href = `maps://?saddr=${userLat},${userLng}&daddr=${koordinat}&dirflg=d`;
                            
                            setTimeout(() => {
                                if (document.hasFocus()) {
                                    window.open(`https://www.google.com/maps/dir/?api=1&origin=${userLat},${userLng}&destination=${koordinat}&travelmode=driving`, '_blank');
                                }
                            }, 500);
                        } else {
                            window.open(`https://www.google.com/maps/dir/?api=1&origin=${userLat},${userLng}&destination=${koordinat}&travelmode=driving`, '_blank');
                        }
                    },
                    () => {
                        alert('Tidak dapat mendeteksi lokasi Anda.');
                    }
                );
            } else {
                alert('Browser tidak mendukung navigasi lokasi.');
            }
        }

        // ====== INISIALISASI DAN AUTO REFRESH ======
        document.addEventListener('DOMContentLoaded', async () => {
            // Load data pertama kali
            await loadDataFromGitHub();
            
            // Coba dapatkan lokasi user
            try {
                await getLocation();
                await hitungSemuaJarak();
            } catch (error) {
                console.log('Lokasi tidak tersedia:', error.message);
            }
            
            // Setup auto-refresh setiap 60 detik
            setInterval(async () => {
                try {
                    await loadDataFromGitHub();
                } catch (error) {
                    console.log('Auto refresh gagal:', error.message);
                }
            }, 60000);
        });
    </script>
</body>
</html>
